<!-- Page Title -->
<div class="page-title" data-aos="fade">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1>Respond to Contact</h1>
          <p class="mb-0">Enter your response to the contact request.</p>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li><a href="/admin/contacts">Contact Requests</a></li>
        <li class="current">Respond</li>
      </ol>
    </div>
  </nav>
</div>
<!-- End Page Title -->

<!-- Contact Response Section -->
<section id="contact-response" class="section">
  <div class="container" data-aos="fade-up">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="card">
          <div class="card-body">
            <h3 class="card-title mb-4">Contact Request Details</h3>

            <div class="mb-4">
              <p><strong>Name:</strong> <%= contact.name %></p>
              <p><strong>Email:</strong> <%= contact.email %></p>
              <p><strong>Subject:</strong> <%= contact.subject %></p>
              <p><strong>Date:</strong> <%= new Date(contact.postDate).toLocaleString() %></p>
              <p><strong>Message:</strong></p>
              <div class="border p-3 mb-3">
                <p class="mb-0"><%= contact.message %></p>
              </div>
            </div>

            <% if (errorMessage) { %>
            <div class="alert alert-danger"><%= errorMessage %></div>
            <% } %>

            <form action="/admin/contacts/<%= contact._id %>/respond" method="post" class="php-email-form">
              <div class="row gy-4">
                <div class="col-md-12">
                  <label for="response" class="form-label">Response</label>
                  <textarea
                    class="form-control"
                    id="response"
                    name="response"
                    rows="6"
                    placeholder="Enter your response here..."
                    required
                  ></textarea>
                </div>

                <div class="col-md-12 text-center">
                  <button type="submit" class="btn btn-primary btn-lg">Submit Response</button>
                  <a href="/admin/contacts" class="btn btn-secondary btn-lg ms-2">Cancel</a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- /Contact Response Section -->

