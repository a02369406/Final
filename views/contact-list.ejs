<!-- Page Title -->
<div class="page-title" data-aos="fade">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1>Contact Requests</h1>
          <p class="mb-0">Respond to contact requests that have not been answered.</p>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li class="current">Contact Requests</li>
      </ol>
    </div>
  </nav>
</div>
<!-- End Page Title -->

<!-- Contact List Section -->
<section id="contact-list" class="section">
  <div class="container" data-aos="fade-up">
    <div class="row">
      <div class="col-lg-12">
        <% if (contacts.length === 0) { %>
        <div class="alert alert-info">
          <p class="mb-0">No pending contact requests.</p>
        </div>
        <% } else { %>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% contacts.forEach((contact) => { %>
              <tr>
                <td><%= new Date(contact.postDate).toLocaleDateString() %></td>
                <td><%= contact.name %></td>
                <td><%= contact.email %></td>
                <td><%= contact.subject %></td>
                <td><%= contact.message.length > 50 ? contact.message.substring(0, 50) + '...' : contact.message %></td>
                <td>
                  <a href="/admin/contacts/<%= contact._id %>/respond" class="btn btn-sm btn-primary">Respond</a>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</section>
<!-- /Contact List Section -->

