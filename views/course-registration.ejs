<!-- Page Title -->
<div class="page-title" data-aos="fade">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1>Course Registration</h1>
          <p class="mb-0">Register for <%= course.title %></p>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li><a href="/courses">Courses</a></li>
        <li><a href="/courses/<%= course.slug %>"><%= course.title %></a></li>
        <li class="current">Registration</li>
      </ol>
    </div>
  </nav>
</div>
<!-- End Page Title -->

<!-- Course Registration Section -->
<section id="course-registration" class="section">
  <div class="container" data-aos="fade-up">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="card">
          <div class="card-body">
            <h3 class="card-title mb-4">Course Registration</h3>
            
            <form action="/courses/<%= course.slug %>/register" method="post" class="php-email-form">
              <div class="row gy-4">
                <div class="col-md-6">
                  <label for="firstName" class="form-label">First Name</label>
                  <input
                    type="text"
                    class="form-control"
                    id="firstName"
                    name="firstName"
                    value="<%= user.firstName %>"
                    readonly
                  />
                </div>

                <div class="col-md-6">
                  <label for="lastName" class="form-label">Last Name</label>
                  <input
                    type="text"
                    class="form-control"
                    id="lastName"
                    name="lastName"
                    value="<%= user.lastName %>"
                    readonly
                  />
                </div>

                <div class="col-md-12">
                  <label for="email" class="form-label">Email</label>
                  <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    value="<%= user.email %>"
                    readonly
                  />
                </div>

                <div class="col-md-12">
                  <label for="courseId" class="form-label">Course</label>
                  <select class="form-control" id="courseId" name="courseId" required>
                    <% allCourses.forEach((c) => { %>
                    <option value="<%= c._id %>" <%= c._id.toString() === course._id.toString() ? 'selected' : '' %>><%= c.title %></option>
                    <% }); %>
                  </select>
                </div>

                <div class="col-md-12 text-center">
                  <button type="submit" class="btn btn-primary btn-lg">Register</button>
                  <a href="/courses/<%= course.slug %>" class="btn btn-secondary btn-lg ms-2">Cancel</a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- /Course Registration Section -->

