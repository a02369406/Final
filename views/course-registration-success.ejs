<!-- Page Title -->
<div class="page-title" data-aos="fade">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1>Registration Confirmation</h1>
          <p class="mb-0"><%= message %></p>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li><a href="/courses">Courses</a></li>
        <li><a href="/courses/<%= course.slug %>"><%= course.title %></a></li>
        <li class="current">Registration Confirmation</li>
      </ol>
    </div>
  </nav>
</div>
<!-- End Page Title -->

<!-- Registration Success Section -->
<section id="course-registration-success" class="section">
  <div class="container" data-aos="fade-up">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="card">
          <div class="card-body text-center">
            <div class="mb-4">
              <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
            </div>
            <h3 class="card-title mb-4"><%= message %></h3>
            
            <div class="mb-4">
              <h5>Course Details</h5>
              <p><strong>Course:</strong> <%= course.title %></p>
              <p><strong>Schedule:</strong> <%= course.schedule %></p>
              <p><strong>Price:</strong> $<%= course.price %></p>
            </div>

            <div class="mt-4">
              <a href="/courses/<%= course.slug %>" class="btn btn-primary btn-lg me-2">View Course</a>
              <a href="/courses" class="btn btn-secondary btn-lg">Browse More Courses</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- /Registration Success Section -->

